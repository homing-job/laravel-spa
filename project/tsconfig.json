{
    "compilerOptions": {
      "outDir": "./built/",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es2015",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "downlevelIteration": true,
      "target": "es5",
      "lib": [
        "es2016",
        "dom"
      ],
      "baseUrl": "./",
      "paths": {
        "@admin/*": [
            "resources/ts/admin/*"
        ],
      }
    },
    "include": [
      "resources/ts/**/*"
    ],
  }
